<% if logged_in? %>

  <h1>タスク一覧</h1>
  
  <% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>タスク</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.id, task %></td> 
            <td><%= task.status %></td> 
            <td><%= task.content %></td>
          </tr>  
        <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @tasks %>
    </div>
  <% end %>
  
  <% if logged_in? %>
    <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <% else %>
    
  <% end %>
  
  
  <%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>
  
<% else %>

  <%= link_to 'login', login_path %>
  <%= link_to 'signup', signup_path %>
<% end %>


